{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:turbo": "node scripts/dev.js turbo",
    "dev:fresh": "node scripts/dev.js fresh",
    "dev:clean": "node scripts/dev.js clean",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "maintain": "node scripts/maintenance.js",
    "maintain:deps": "node scripts/maintenance.js deps",
    "maintain:update": "node scripts/maintenance.js update",
    "maintain:audit": "node scripts/maintenance.js audit",
    "maintain:prune": "node scripts/maintenance.js prune",
    "maintain:verify": "node scripts/maintenance.js verify",
    "clean": "rm -rf .next out",
    "optimize-images": "node scripts/optimize-images.js",
    "update-deps": "node scripts/update-deps.js",
    "update-deps:check": "node scripts/update-deps.js --dry-run",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.11.3",
    "@vercel/analytics": "^1.4.1",
    "caniuse-lite": "^1.0.30001695",
    "clsx": "^2.1.1",
    "framer-motion": "^12.0.6",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.474.0",
    "next": "^15.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^5.0.0",
    "react-icons": "^5.4.0",
    "react-swipeable": "^7.0.2",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.1",
    "remark-images": "^4.1.0",
    "remark-parse": "^11.0.0",
    "sharp": "^0.33.5",
    "styled-jsx": "^5.1.6",
    "swr": "^2.3.0",
    "tailwind-merge": "^3.0.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.1.6",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.6.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.14",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.20",
    "critters": "^0.0.23",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.1",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^13.0.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.3"
  }
}
