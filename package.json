{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "files": [
    "app/**/*",
    "public/**/*",
    "!public/audio/**/*",
    "!**/coverage/**",
    "!**/.env*",
    "!**/*.log",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:turbo": "node scripts/dev.js turbo",
    "dev:fresh": "node scripts/dev.js fresh",
    "dev:clean": "node scripts/dev.js clean",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint . --config .eslintrc.cjs",
    "lint:fix": "eslint . --config .eslintrc.cjs --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "maintain": "node scripts/maintenance.js",
    "maintain:deps": "node scripts/maintenance.js deps",
    "maintain:update": "node scripts/maintenance.js update",
    "maintain:audit": "node scripts/maintenance.js audit",
    "maintain:prune": "node scripts/maintenance.js prune",
    "maintain:verify": "node scripts/maintenance.js verify",
    "clean": "rm -rf .next out",
    "optimize-images": "node scripts/optimize-images.js",
    "update-deps": "node scripts/update-deps.js",
    "update-deps:check": "node scripts/update-deps.js --dry-run",
    "generate-icons": "node scripts/generate-icons.js",
    "security": "npm audit",
    "security:fix": "npm audit fix",
    "security:check": "npm run lint && npm run type-check && npm run security",
    "security:monitor": "npm audit && npm outdated && npm run lint",
    "security:update": "npm update --save && npm audit fix",
    "security:deps": "npm run maintain:deps && npm run security:update",
    "security:scan": "snyk test && npm audit",
    "security:report": "npm audit --json > security-report.json",
    "security:compliance": "npm run security:check && npm run security:scan",
    "check:all": "npm run lint && npm run type-check && npm run security && npm run security:scan",
    "reset-key": "echo \"ENCRYPTION_KEY=$(openssl rand -base64 32)\" > .env.local",
    "reset": "rm -rf node_modules .next out coverage .turbo && npm cache clean --force && npm install"
  },
  "dependencies": {
    "@aws-sdk/s3-request-presigner": "3.749.0",
    "@headlessui/react": "2.2.0",
    "@tanstack/react-virtual": "^3.11.3",
    "@types/toobusy-js": "^0.5.4",
    "@upstash/ratelimit": "^1.2.1",
    "@upstash/redis": "^1.34.4",
    "@vercel/analytics": "^1.4.1",
    "caniuse-lite": "^1.0.30001695",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "framer-motion": "^12.4.7",
    "gray-matter": "^4.0.3",
    "hastscript": "9.0.0",
    "isomorphic-dompurify": "^2.21.0",
    "lru-cache": "11.0.2",
    "lucide-react": "^0.475.0",
    "next": "^15.1.6",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^5.0.0",
    "react-icons": "^5.4.0",
    "react-swipeable": "^7.0.2",
    "rehype-autolink-headings": "7.1.0",
    "rehype-highlight": "7.0.2",
    "rehype-prism-plus": "2.0.0",
    "rehype-sanitize": "6.0.0",
    "rehype-slug": "6.0.0",
    "rehype-stringify": "10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "4.0.1",
    "remark-html": "^16.0.1",
    "remark-images": "^4.1.0",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.1",
    "sharp": "^0.33.5",
    "styled-jsx": "^5.1.6",
    "swr": "^2.3.0",
    "tailwind-merge": "^3.0.1",
    "toobusy-js": "^0.5.1",
    "unified": "11.0.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "3.749.0",
    "@next/bundle-analyzer": "^15.1.6",
    "@tailwindcss/typography": "^0.5.16",
    "@types/crypto-js": "^4.2.1",
    "@types/lru-cache": "7.10.9",
    "@types/node": "^20.17.14",
    "@types/pino": "^7.0.5",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.20",
    "critters": "^0.0.23",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-security": "^2.1.1",
    "mime-types": "2.1.35",
    "postcss": "^8.5.1",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^13.0.1",
    "prettier": "^3.4.2",
    "snyk": "^1.1247.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.3"
  }
}
